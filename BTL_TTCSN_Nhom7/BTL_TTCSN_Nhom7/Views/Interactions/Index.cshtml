@model IEnumerable<BTL_TTCSN_Nhom7.Models.Interaction>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    a {
        color: blueviolet;
        text-decoration: none;
    }

        a:hover {
            color: red;
        }

    table tr td {
        padding: 10px;
        width: 20%;
        text-align: center;
    }

    table tr th {
        text-align: center;
    }
</style>

<h2>Danh sách tương tác</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Device.device_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.users_Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.interaction_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.interaction_Time)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.interaction_Details)
            </th>*@
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Device.device_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.users_Username)
            </td>
            <td>
                @if (item.interaction_Type == "Kích hoạt")
                {
                    <label style="color:green; font-weight:bold">Kích hoạt</label>
                }
                else
                {
                    <label style="color:red; font-weight:bold">Ngừng kích hoạt</label>
                }
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.interaction_Time)*@
                @(((DateTime)item.interaction_Time).ToString("dd-MM-yyyy HH:mm:ss tt"))
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.interaction_Details)
                </td>*@
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.interaction_Id }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.interaction_Id }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.interaction_Id })
            </td>
        </tr>
    }

</table>
